{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build with g++",
            "command": "/usr/bin/g++",
            "args": [
                "-g",                // Enable debugging
                "-O0",               // Disable optimizations
                "-std=c++17",        // Use C++17
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Custom G++ Build Task"
        }
    ]
}
